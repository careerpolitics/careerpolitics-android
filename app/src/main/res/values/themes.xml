<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base app theme -->
    <style name="Theme.DevAndroid" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- App brand colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Do not override system bar colors; keep defaults -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <!-- Splash screen theme (Android 12+) -->
    <style name="Theme.DevAndroid.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.DevAndroid</item>
        <!-- Do not override system bar colors during splash either -->
    </style>

</resources>